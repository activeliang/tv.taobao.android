<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_focused="false">
        <layer-list>
            <item android:left="@dimen/dp_2" android:top="@dimen/dp_2" android:right="@dimen/dp_2" android:bottom="@dimen/dp_2">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/dp_6"/>
                    <stroke android:width="@dimen/dp_2" android:color="#b36688aa"/>
                    <solid android:color="#4c001122"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/dp_6"/>
                    <stroke android:width="@dimen/dp_2" android:color="@color/colorWhite"/>
                    <solid android:color="#cc000000"/>
                </shape>
            </item>
            <item android:left="@dimen/dp_4" android:top="@dimen/dp_4" android:right="@dimen/dp_4" android:bottom="@dimen/dp_4">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/dp_4"/>
                    <gradient android:startColor="#ff9c21" android:endColor="#ff6721" android:angle="0" android:type="linear"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
