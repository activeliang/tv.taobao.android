<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="300dp" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="设备模拟："/>
        <Spinner android:id="@+id/device_fake" android:layout_width="250dp" android:layout_height="50dp" android:layout_marginLeft="10dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="页面堆栈降级开关："/>
        <CheckBox android:id="@+id/page_stack_default" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="不降级"/>
        <CheckBox android:id="@+id/page_stack_0x01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="维持3个页面"/>
        <CheckBox android:id="@+id/page_stack_0x02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="维持2个页面"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="页面显示降级开关："/>
        <CheckBox android:id="@+id/page_show_default" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="不降级"/>
        <CheckBox android:id="@+id/page_show_0x01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="商品详情页降级"/>
        <CheckBox android:id="@+id/page_show_0x02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="大图背景纯色降级"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="图片显示降级开关："/>
        <CheckBox android:id="@+id/img_show_default" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="不降级"/>
        <CheckBox android:id="@+id/img_show_0x01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="ARGB4444"/>
        <CheckBox android:id="@+id/img_show_0x02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="ImageLoader不进行内存缓存"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="控件表现降级开关："/>
        <CheckBox android:id="@+id/widget_show_default" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="不降级"/>
        <CheckBox android:id="@+id/widget_show_0x01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="RoundImageView降级"/>
        <Button android:gravity="center" android:id="@+id/save" android:layout_width="100dp" android:layout_height="50dp" android:layout_marginTop="10dp" android:text="保存"/>
        <Button android:gravity="center" android:id="@+id/clear" android:layout_width="150dp" android:layout_height="50dp" android:layout_marginTop="10dp" android:layout_marginBottom="30dp" android:text="清理本地配置"/>
    </LinearLayout>
</ScrollView>
