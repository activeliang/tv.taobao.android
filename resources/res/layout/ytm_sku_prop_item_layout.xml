                <ImageView android:id="@+id/sku_buy_num_right_array" android:layout_width="@dimen/dp_64" android:layout_height="match_parent" android:src="@drawable/ytm_sku_buy_num_right_normal" android:scaleType="center"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/sp_20" android:textColor="#b0afaf" android:layout_gravity="center_vertical" android:id="@+id/sku_unit_buy_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_8" android:text="@string/ytm_sku_unit_buy_text"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/sp_24" android:textColor="#b0afaf" android:id="@+id/sku_kucun_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ytm_sku_kucun_text"/>
    </LinearLayout>
</RelativeLayout>
