        <ImageView android:background="@drawable/ytm_sku_prop_mask_left" android:focusable="false" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentLeft="true"/>
        <ImageView android:background="@drawable/ytm_sku_prop_mask_right" android:focusable="false" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true"/>
