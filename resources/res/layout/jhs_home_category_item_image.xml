        <TextView android:textSize="@dimen/dp_28" android:textColor="@color/jhs_brand_detail_red_font_color" android:id="@+id/money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:layout_toRightOf="@+id/money_head" android:layout_centerVertical="true"/>
