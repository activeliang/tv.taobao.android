            </RelativeLayout>
            <TextView android:textSize="@dimen/dp_15" android:textColor="@color/jhs_brand_detail_black_font_color" android:id="@+id/old_price" android:paddingRight="@dimen/dp_20" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_10" android:layout_toRightOf="@+id/discount_layout" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
