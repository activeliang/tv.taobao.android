            <TextView android:textSize="@dimen/sp_16" android:textColor="@color/jhs_white" android:id="@+id/message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_20" android:singleLine="true"/>
