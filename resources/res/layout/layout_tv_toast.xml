<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@+id/toast_container" android:background="@drawable/tvtao_bg_tv_toast" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/dp_400" android:minHeight="@dimen/dp_160">
